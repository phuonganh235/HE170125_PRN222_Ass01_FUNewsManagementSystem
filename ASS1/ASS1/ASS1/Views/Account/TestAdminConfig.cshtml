@{
    ViewData["Title"] = "Test Admin Config";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Test Admin Configuration</h2>
            
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Admin Configuration Status</h5>
                    
                    @if (ViewBag.IsNull)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>AdminConfig is NULL!</strong>
                            <p>The AdminAccountConfig is not being loaded from appsettings.json</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <strong>AdminConfig Loaded Successfully!</strong>
                        </div>
                        
                        <h6>Configuration Details:</h6>
                        <ul>
                            <li><strong>Email:</strong> @ViewBag.AdminConfig.Email</li>
                            <li><strong>Password:</strong> @ViewBag.AdminConfig.Password</li>
                            <li><strong>Account Name:</strong> @ViewBag.AdminConfig.AccountName</li>
                            <li><strong>Account Role:</strong> @ViewBag.AdminConfig.AccountRole</li>
                        </ul>
                    }
                    
                    <div class="mt-3">
                        <a asp-action="Login" class="btn btn-primary">Go to Login</a>
                        <a asp-controller="Admin" asp-action="TestLogin" class="btn btn-info">Test Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
