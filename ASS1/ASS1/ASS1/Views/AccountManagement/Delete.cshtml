@model ASS1.DAL.Models.SystemAccount

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-danger">Delete Account</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.CanDelete == false)
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Cannot Delete Account</h5>
                            <p>This account cannot be deleted because it has associated news articles. Please remove or reassign the news articles first.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this account?</h5>
                            <p>This action cannot be undone.</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Account ID:</dt>
                        <dd class="col-sm-9">@Model.AccountId</dd>

                        <dt class="col-sm-3">Account Name:</dt>
                        <dd class="col-sm-9">@Model.AccountName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.AccountEmail</dd>

                        <dt class="col-sm-3">Role:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.AccountRole)
                            {
                                case 1:
                                    <span class="badge bg-primary">Staff</span>
                                    break;
                                case 2:
                                    <span class="badge bg-warning">Lecturer</span>
                                    break;
                                case 3:
                                    <span class="badge bg-danger">Admin</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Unknown</span>
                                    break;
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        @if (ViewBag.CanDelete == true)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="AccountId" />
                                <button type="submit" class="btn btn-danger">Delete Account</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
