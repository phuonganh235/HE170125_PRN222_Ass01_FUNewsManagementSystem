@model AccountSearchViewModel

@{
    ViewData["Title"] = "Account Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Account Management</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Account
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Search and Filter Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="SearchTerm" class="form-label">Search</label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="Search by name or email" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="RoleFilter" class="form-label">Role</label>
                                <select asp-for="RoleFilter" class="form-select">
                                    <option value="">All Roles</option>
                                    @foreach (var role in Model.RoleOptions)
                                    {
                                        <option value="@role.Value">@role.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-primary">Search</button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Summary -->
            <div class="mb-3">
                <p class="text-muted">Showing @Model.Accounts.Count() of @Model.TotalCount accounts</p>
            </div>

            <!-- Accounts Table -->
            <div class="card">
                <div class="card-body">
                    @if (Model.Accounts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.Accounts)
                                    {
                                        <tr>
                                            <td>@account.AccountId</td>
                                            <td>@account.AccountName</td>
                                            <td>@account.AccountEmail</td>
                                            <td>
                                                @switch (account.AccountRole)
                                                {
                                                    case 1:
                                                        <span class="badge bg-primary">Staff</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-warning">Lecturer</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-danger">Admin</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Unknown</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@account.AccountId" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@account.AccountId" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="ChangePassword" asp-route-id="@account.AccountId" 
                                                       class="btn btn-sm btn-outline-secondary" title="Change Password">
                                                        <i class="fas fa-key"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@account.AccountId" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <h5>No accounts found</h5>
                            <p class="text-muted">Try adjusting your search criteria or create a new account.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
