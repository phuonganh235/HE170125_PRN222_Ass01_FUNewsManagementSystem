@{
    ViewData["Title"] = "Test Admin Login";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Test Admin Login</h2>
            
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Login Test Results</h5>
                    
                    @if (ViewBag.LoginResult == "SUCCESS (Database)")
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <strong>Database Login Successful!</strong>
                        </div>
                        <p><strong>User Information:</strong> @ViewBag.UserInfo</p>
                    }
                    else if (ViewBag.LoginResult == "SUCCESS (AppSettings)")
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>AppSettings Admin Ready!</strong>
                        </div>
                        <p><strong>User Information:</strong> @ViewBag.UserInfo</p>
                        <p class="text-muted">The admin account from appsettings.json is configured correctly and ready for login.</p>
                    }
                    else if (ViewBag.LoginResult == "FAILED")
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-times-circle"></i>
                            <strong>Login Failed!</strong>
                        </div>
                        <p><strong>Error:</strong> @ViewBag.UserInfo</p>
                    }
                    else if (ViewBag.LoginResult == "ERROR")
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Error Occurred!</strong>
                        </div>
                        <p><strong>Error:</strong> @ViewBag.UserInfo</p>
                    }
                    
                    <hr>
                    <h6>Test Credentials:</h6>
                    <ul>
                        <li><strong>Email:</strong> admin@FUNewsManagementSystem.org</li>
                        <li><strong>Password:</strong> @@abc123@@</li>
                    </ul>
                    
                    <div class="mt-3">
                        <a asp-action="CheckAdmin" class="btn btn-info">Check Admin Account</a>
                        <a asp-action="Index" class="btn btn-secondary">View All Accounts</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Go to Login Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
