@model List<NewsArticleWithAuditViewModel>

@{
    ViewData["Title"] = "Article Change Audit";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Article Change Audit</h2>
                <div>
                    <a asp-action="RecentChanges" class="btn btn-info me-2">
                        <i class="fas fa-clock"></i> Recent Changes
                    </a>
                    <a asp-action="ByEditor" class="btn btn-outline-primary">
                        <i class="fas fa-user-edit"></i> By Editor
                    </a>
                </div>
            </div>

            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> Audit Information</h6>
                <p class="mb-0">This page shows all articles that have been modified by Staff users. Each modification is tracked using the existing UpdatedByID and ModifiedDate fields.</p>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Article ID</th>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th>Creator</th>
                                        <th>Last Editor</th>
                                        <th>Created Date</th>
                                        <th>Modified Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Article.NewsArticleId</td>
                                            <td>
                                                <strong>@item.Article.NewsTitle</strong>
                                                @if (!string.IsNullOrEmpty(item.Article.Headline))
                                                {
                                                    <br><small class="text-muted">@item.Article.Headline</small>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Article.Category != null)
                                                {
                                                    <span class="badge bg-primary">@item.Article.Category.CategoryName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Category</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@item.CreatedBy</small>
                                            </td>
                                            <td>
                                                <strong>@item.LastModifiedBy</strong>
                                            </td>
                                            <td>
                                                @if (item.Article.CreatedDate.HasValue)
                                                {
                                                    @item.Article.CreatedDate.Value.ToString("MMM dd, yyyy")
                                                }
                                            </td>
                                            <td>
                                                @if (item.Article.ModifiedDate.HasValue)
                                                {
                                                    <span class="text-warning">
                                                        @item.Article.ModifiedDate.Value.ToString("MMM dd, yyyy")
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Article.NewsStatus == true)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Article.NewsArticleId" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="NewsArticleManagement" asp-action="Details" asp-route-id="@item.Article.NewsArticleId" 
                                                   class="btn btn-sm btn-outline-primary" title="View Article">
                                                    <i class="fas fa-newspaper"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count</h3>
                                <p class="mb-0">Modified Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count(x => x.Article.NewsStatus == true)</h3>
                                <p class="mb-0">Active Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Select(x => x.LastModifiedBy).Distinct().Count()</h3>
                                <p class="mb-0">Unique Editors</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count(x => x.Article.ModifiedDate >= DateTime.Now.AddDays(-7))</h3>
                                <p class="mb-0">Modified This Week</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No modified articles found</h5>
                    <p class="text-muted">No articles have been modified yet.</p>
                </div>
            }
        </div>
    </div>
</div>
