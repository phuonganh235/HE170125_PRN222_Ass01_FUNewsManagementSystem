@model List<NewsArticleWithAuditViewModel>

@{
    ViewData["Title"] = "Recent Changes";
    var days = ViewBag.Days as int? ?? 7;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Recent Changes (Last @days Days)</h2>
                <div>
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> All Changes
                    </a>
                    <div class="btn-group">
                        <a asp-action="RecentChanges" asp-route-days="1" 
                           class="btn @(days == 1 ? "btn-primary" : "btn-outline-primary")">1 Day</a>
                        <a asp-action="RecentChanges" asp-route-days="7" 
                           class="btn @(days == 7 ? "btn-primary" : "btn-outline-primary")">7 Days</a>
                        <a asp-action="RecentChanges" asp-route-days="30" 
                           class="btn @(days == 30 ? "btn-primary" : "btn-outline-primary")">30 Days</a>
                    </div>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Article</th>
                                        <th>Last Editor</th>
                                        <th>Modified Date</th>
                                        <th>Time Since</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@item.Article.NewsTitle</strong>
                                                    @if (!string.IsNullOrEmpty(item.Article.Headline))
                                                    {
                                                        <br><small class="text-muted">@item.Article.Headline</small>
                                                    }
                                                    <br><small class="text-muted">ID: @item.Article.NewsArticleId</small>
                                                </div>
                                            </td>
                                            <td>
                                                <strong>@item.LastModifiedBy</strong>
                                            </td>
                                            <td>
                                                @if (item.Article.ModifiedDate.HasValue)
                                                {
                                                    @item.Article.ModifiedDate.Value.ToString("MMM dd, yyyy 'at' HH:mm")
                                                }
                                            </td>
                                            <td>
                                                @if (item.Article.ModifiedDate.HasValue)
                                                {
                                                    var timeSince = DateTime.Now - item.Article.ModifiedDate.Value;
                                                    if (timeSince.TotalDays >= 1)
                                                    {
                                                        <span class="text-muted">@((int)timeSince.TotalDays) days ago</span>
                                                    }
                                                    else if (timeSince.TotalHours >= 1)
                                                    {
                                                        <span class="text-muted">@((int)timeSince.TotalHours) hours ago</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">@((int)timeSince.TotalMinutes) minutes ago</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (item.Article.NewsStatus == true)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.Article.NewsArticleId" 
                                                   class="btn btn-sm btn-outline-info" title="View Audit Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="NewsArticleManagement" asp-action="Details" asp-route-id="@item.Article.NewsArticleId" 
                                                   class="btn btn-sm btn-outline-primary" title="View Article">
                                                    <i class="fas fa-newspaper"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count</h3>
                                <p class="mb-0">Changes in Last @days Days</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Select(x => x.LastModifiedBy).Distinct().Count()</h3>
                                <p class="mb-0">Active Editors</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.Count > 0 ? (Model.Count / (double)days).ToString("F1") : "0")</h3>
                                <p class="mb-0">Changes per Day</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No recent changes found</h5>
                    <p class="text-muted">No articles have been modified in the last @days days.</p>
                    <a asp-action="Index" class="btn btn-primary">View All Changes</a>
                </div>
            }
        </div>
    </div>
</div>
