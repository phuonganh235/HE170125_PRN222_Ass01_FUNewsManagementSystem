@model ASS1.DAL.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-danger">Delete Category</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.CanDelete == false)
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Cannot Delete Category</h5>
                            <p>This category cannot be deleted because it has associated news articles. Please remove or reassign the news articles first.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this category?</h5>
                            <p>This action cannot be undone.</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Category ID:</dt>
                        <dd class="col-sm-9">@Model.CategoryId</dd>

                        <dt class="col-sm-3">Category Name:</dt>
                        <dd class="col-sm-9">@Model.CategoryName</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.CategoryDesciption</dd>

                        <dt class="col-sm-3">Parent Category:</dt>
                        <dd class="col-sm-9">
                            @if (Model.ParentCategory != null)
                            {
                                @Model.ParentCategory.CategoryName
                            }
                            else
                            {
                                <span class="text-muted">Root Category</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        @if (ViewBag.CanDelete == true)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="CategoryId" />
                                <button type="submit" class="btn btn-danger">Delete Category</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
