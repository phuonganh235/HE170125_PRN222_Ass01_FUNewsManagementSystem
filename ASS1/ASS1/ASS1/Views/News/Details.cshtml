@model RelatedNewsViewModel

@{
    ViewData["Title"] = Model.CurrentArticle.NewsTitle ?? "News Details";
    var article = Model.CurrentArticle;
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <article>
                <header class="mb-4">
                    <h1>@article.NewsTitle</h1>
                    <h2 class="text-muted h4">@article.Headline</h2>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            @if (article.CreatedDate.HasValue)
                            {
                                @article.CreatedDate.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                            }
                        </small>
                        @if (article.Category != null)
                        {
                            <span class="badge bg-primary">@article.Category.CategoryName</span>
                        }
                    </div>
                </header>

                <div class="news-content">
                    @if (!string.IsNullOrEmpty(article.NewsContent))
                    {
                        <p class="lead">@article.NewsContent</p>
                    }
                </div>

                @if (article.Tags.Any())
                {
                    <div class="mt-3">
                        <h6>Tags:</h6>
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var tag in article.Tags)
                            {
                                <span class="badge bg-secondary">@tag.TagName</span>
                            }
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(article.NewsSource))
                {
                    <footer class="mt-4 pt-3 border-top">
                        <p class="text-muted">
                            <strong>Source:</strong> @article.NewsSource
                        </p>
                    </footer>
                }
            </article>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to News</a>
            </div>
        </div>

        <!-- Related Articles Sidebar -->
        <div class="col-md-4">
            @if (Model.HasRelatedArticles)
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-newspaper"></i> Related Articles
                        </h5>
                    </div>
                    <div class="card-body">
                        @foreach (var relatedArticle in Model.RelatedArticles)
                        {
                            <div class="mb-3 pb-3 @(relatedArticle != Model.RelatedArticles.Last() ? "border-bottom" : "")">
                                <h6 class="card-title">
                                    <a asp-action="Details" asp-route-id="@relatedArticle.NewsArticleId" 
                                       class="text-decoration-none">
                                        @relatedArticle.NewsTitle
                                    </a>
                                </h6>
                                <p class="card-text small text-muted">
                                    @if (!string.IsNullOrEmpty(relatedArticle.Headline))
                                    {
                                        @relatedArticle.Headline
                                    }
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        @if (relatedArticle.CreatedDate.HasValue)
                                        {
                                            @relatedArticle.CreatedDate.Value.ToString("MMM dd, yyyy")
                                        }
                                    </small>
                                    @if (relatedArticle.Category != null)
                                    {
                                        <span class="badge bg-primary badge-sm">@relatedArticle.Category.CategoryName</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-info-circle text-muted fa-2x mb-2"></i>
                        <p class="text-muted">No related articles found.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
