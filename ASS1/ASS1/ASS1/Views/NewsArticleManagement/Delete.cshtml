@model ASS1.DAL.Models.NewsArticle

@{
    ViewData["Title"] = "Delete News Article";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-danger">Delete News Article</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this article?</h5>
                        <p>This action will also remove all associated tags and cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Article ID:</dt>
                        <dd class="col-sm-9">@Model.NewsArticleId</dd>

                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.NewsTitle</dd>

                        <dt class="col-sm-3">Headline:</dt>
                        <dd class="col-sm-9">@Model.Headline</dd>

                        <dt class="col-sm-3">Category:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Category != null)
                            {
                                @Model.Category.CategoryName
                            }
                            else
                            {
                                <span class="text-muted">No Category</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Author:</dt>
                        <dd class="col-sm-9">
                            @if (Model.CreatedBy != null)
                            {
                                @Model.CreatedBy.AccountName
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">
                            @if (Model.CreatedDate.HasValue)
                            {
                                @Model.CreatedDate.Value.ToString("MMMM dd, yyyy")
                            }
                        </dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.NewsStatus == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        @if (Model.Tags.Any())
                        {
                            <dt class="col-sm-3">Tags:</dt>
                            <dd class="col-sm-9">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="badge bg-primary me-1">@tag.TagName</span>
                                }
                            </dd>
                        }
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="NewsArticleId" />
                            <button type="submit" class="btn btn-danger">Delete Article</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
