@model NewsArticleEditViewModel

@{
    ViewData["Title"] = "Edit News Article";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4>Edit News Article</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="NewsArticleId" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="NewsTitle" class="form-label"></label>
                                    <input asp-for="NewsTitle" class="form-control" placeholder="Enter news title" />
                                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="">Select Category</option>
                                        @foreach (var category in Model.CategoryOptions)
                                        {
                                            <option value="@category.Value">@category.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Headline" class="form-label"></label>
                            <input asp-for="Headline" class="form-control" placeholder="Enter headline" />
                            <span asp-validation-for="Headline" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewsContent" class="form-label"></label>
                            <textarea asp-for="NewsContent" class="form-control" rows="8" placeholder="Enter news content"></textarea>
                            <span asp-validation-for="NewsContent" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NewsSource" class="form-label"></label>
                                    <input asp-for="NewsSource" class="form-control" placeholder="Enter news source" />
                                    <span asp-validation-for="NewsSource" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SelectedTagIds" class="form-label"></label>
                                    <select asp-for="SelectedTagIds" class="form-select" multiple>
                                        @foreach (var tag in Model.TagOptions)
                                        {
                                            <option value="@tag.Value">@tag.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
                                    <div class="form-text">Hold Ctrl to select multiple tags.</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="NewsStatus" class="form-check-input" />
                            <label asp-for="NewsStatus" class="form-check-label">Active</label>
                        </div>

                        @if (Model.CurrentTags.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Tags:</label>
                                <div>
                                    @foreach (var tag in Model.CurrentTags)
                                    {
                                        <span class="badge bg-primary me-1">@tag.TagName</span>
                                    }
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <div>
                                <a asp-controller="NewsTagLink" asp-action="Manage" asp-route-articleId="@Model.NewsArticleId" 
                                   class="btn btn-info me-2">Manage Tags</a>
                                <button type="submit" class="btn btn-primary">Update Article</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
