@model List<AuthorReportItem>

@{
    ViewData["Title"] = "Author Report";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Articles by Author</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>

            @if (fromDate.HasValue || toDate.HasValue)
            {
                <div class="alert alert-info">
                    <strong>Date Range:</strong> 
                    @if (fromDate.HasValue && toDate.HasValue)
                    {
                        @fromDate.Value.ToString("MMM dd, yyyy")
                    }
                    else if (fromDate.HasValue)
                    {
                        @("From " + fromDate.Value.ToString("MMM dd, yyyy"))
                    }
                    else if (toDate.HasValue)
                    {
                        @("Until " + toDate.Value.ToString("MMM dd, yyyy"))
                    }
                </div>
            }

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Author ID</th>
                                        <th>Author Name</th>
                                        <th>Email</th>
                                        <th>Total Articles</th>
                                        <th>Active Articles</th>
                                        <th>Inactive Articles</th>
                                        <th>Latest Article</th>
                                        <th>Oldest Article</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AuthorId</td>
                                            <td>
                                                <strong>@item.AuthorName</strong>
                                            </td>
                                            <td>
                                                <small class="text-muted">@item.AuthorEmail</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-info fs-6">@item.ArticleCount</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@item.ActiveCount</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.InactiveCount</span>
                                            </td>
                                            <td>
                                                @if (item.LatestArticleDate.HasValue)
                                                {
                                                    @item.LatestArticleDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.OldestArticleDate.HasValue)
                                                {
                                                    @item.OldestArticleDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="NewsArticleManagement" asp-action="Index" 
                                                   asp-route-authorName="@item.AuthorName" 
                                                   class="btn btn-sm btn-outline-primary" title="View Articles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Count</h3>
                                <p class="mb-0">Total Authors</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Sum(x => x.ArticleCount)</h3>
                                <p class="mb-0">Total Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.Any() ? Model.Average(x => x.ArticleCount).ToString("F1") : "0")</h3>
                                <p class="mb-0">Avg Articles/Author</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.Any() ? Model.Max(x => x.ArticleCount) : 0)</h3>
                                <p class="mb-0">Most Productive Author</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Top Authors Chart -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Top 10 Most Productive Authors</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="authorChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No author data found</h5>
                    <p class="text-muted">No articles found for the selected date range.</p>
                    <a asp-action="Index" class="btn btn-primary">Back to Reports</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Author Chart
        const authorCtx = document.getElementById('authorChart').getContext('2d');
        const authorChart = new Chart(authorCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Take(10).Select(a => $"'{a.AuthorName}'")))],
                datasets: [{
                    label: 'Articles',
                    data: [@string.Join(",", Model.Take(10).Select(a => a.ArticleCount))],
                    backgroundColor: '#007bff',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
