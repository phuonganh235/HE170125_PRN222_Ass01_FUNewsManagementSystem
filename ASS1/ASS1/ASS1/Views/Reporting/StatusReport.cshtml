@model List<StatusReportItem>

@{
    ViewData["Title"] = "Status Report";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Articles by Status</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
            </div>

            @if (fromDate.HasValue || toDate.HasValue)
            {
                <div class="alert alert-info">
                    <strong>Date Range:</strong> 
                    @if (fromDate.HasValue && toDate.HasValue)
                    {
                        @fromDate.Value.ToString("MMM dd, yyyy")
                    }
                    else if (fromDate.HasValue)
                    {
                        @("From " + fromDate.Value.ToString("MMM dd, yyyy"))
                    }
                    else if (toDate.HasValue)
                    {
                        @("Until " + toDate.Value.ToString("MMM dd, yyyy"))
                    }
                </div>
            }

            @if (Model.Any())
            {
                <div class="row mb-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="card @(item.Status ? "border-success" : "border-secondary")">
                                <div class="card-header @(item.Status ? "bg-success text-white" : "bg-secondary text-white")">
                                    <h5 class="mb-0">
                                        <i class="fas @(item.Status ? "fa-check-circle" : "fa-times-circle")"></i>
                                        @item.StatusName Articles
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6">
                                            <h2 class="text-@(item.Status ? "success" : "secondary")">@item.ArticleCount</h2>
                                            <p class="mb-0">Total Articles</p>
                                        </div>
                                        <div class="col-6">
                                            <h2 class="text-@(item.Status ? "success" : "secondary")">@item.Percentage%</h2>
                                            <p class="mb-0">Percentage</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <strong>Latest:</strong><br>
                                                @if (item.LatestArticleDate.HasValue)
                                                {
                                                    @item.LatestArticleDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <strong>Oldest:</strong><br>
                                                @if (item.OldestArticleDate.HasValue)
                                                {
                                                    @item.OldestArticleDate.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Status Chart -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Status Distribution</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="statusChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Status Statistics</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Status</th>
                                                <th>Count</th>
                                                <th>Percentage</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="badge @(item.Status ? "bg-success" : "bg-secondary")">
                                                            @item.StatusName
                                                        </span>
                                                    </td>
                                                    <td>@item.ArticleCount</td>
                                                    <td>@item.Percentage%</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Statistics -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.Sum(x => x.ArticleCount)</h3>
                                <p class="mb-0">Total Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h3>@Model.FirstOrDefault(x => x.Status)?.ArticleCount ?? 0</h3>
                                <p class="mb-0">Active Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-secondary text-white">
                            <div class="card-body text-center">
                                <h3>@Model.FirstOrDefault(x => !x.Status)?.ArticleCount ?? 0</h3>
                                <p class="mb-0">Inactive Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h3>@(Model.FirstOrDefault(x => x.Status)?.Percentage ?? 0)%</h3>
                                <p class="mb-0">Active Percentage</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h5>No status data found</h5>
                    <p class="text-muted">No articles found for the selected date range.</p>
                    <a asp-action="Index" class="btn btn-primary">Back to Reports</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Status Chart
        const statusCtx = document.getElementById('statusChart').getContext('2d');
        const statusChart = new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Select(s => $"'{s.StatusName}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.Select(s => s.ArticleCount))],
                    backgroundColor: ['#28a745', '#6c757d'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
