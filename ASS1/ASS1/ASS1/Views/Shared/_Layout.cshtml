<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASS1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASS1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASS1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var authService = Context.RequestServices.GetService<ASS1.Services.IAuthenticationService>();
                        var isAuthenticated = authService?.IsAuthenticated() ?? false;
                        var currentUser = isAuthenticated ? await authService?.GetCurrentUserAsync() : null;
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">
                                <i class="fas fa-newspaper"></i> News
                            </a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user"></i> Profile
                                </a>
                            </li>
                            @if (currentUser?.AccountRole == 1 || currentUser?.AccountRole == 3) @* Staff or Admin *@
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="staffDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-tools"></i> Staff Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="staffDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="CategoryManagement" asp-action="Index">
                                                <i class="fas fa-folder"></i> Categories
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="NewsArticleManagement" asp-action="Index">
                                                <i class="fas fa-edit"></i> Manage Articles
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="TagManagement" asp-action="Index">
                                                <i class="fas fa-tags"></i> Tags
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (currentUser?.AccountRole == 3) @* Admin only *@
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cog"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="fas fa-tachometer-alt"></i> Admin Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AccountManagement" asp-action="Index">
                                                <i class="fas fa-users"></i> Account Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Reporting" asp-action="Index">
                                                <i class="fas fa-chart-bar"></i> Reports & Statistics
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Audit" asp-action="Index">
                                                <i class="fas fa-history"></i> Change Audit
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ASS1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
