@model List<ASS1.DAL.Models.NewsArticle>

@{
    ViewData["Title"] = "Articles with Tag";
    var tagName = ViewBag.TagName as string ?? "Unknown Tag";
    var articleCount = ViewBag.ArticleCount as int? ?? 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Articles with Tag: <span class="badge bg-primary">@tagName</span></h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Tags
                </a>
            </div>

            <div class="mb-3">
                <p class="text-muted">Showing @Model.Count articles tagged with "@tagName"</p>
            </div>

            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Article ID</th>
                                        <th>Title</th>
                                        <th>Headline</th>
                                        <th>Category</th>
                                        <th>Author</th>
                                        <th>Created Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var article in Model)
                                    {
                                        <tr>
                                            <td>@article.NewsArticleId</td>
                                            <td>@article.NewsTitle</td>
                                            <td>@article.Headline</td>
                                            <td>
                                                @if (article.Category != null)
                                                {
                                                    @article.Category.CategoryName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Category</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.CreatedBy != null)
                                                {
                                                    @article.CreatedBy.AccountName
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.CreatedDate.HasValue)
                                                {
                                                    @article.CreatedDate.Value.ToString("MMM dd, yyyy")
                                                }
                                            </td>
                                            <td>
                                                @if (article.NewsStatus == true)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="NewsArticleManagement" asp-action="Details" asp-route-id="@article.NewsArticleId" 
                                                       class="btn btn-sm btn-outline-info" title="View Article">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="NewsArticleManagement" asp-action="Edit" asp-route-id="@article.NewsArticleId" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit Article">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <h5>No articles found</h5>
                    <p class="text-muted">No articles are currently tagged with "@tagName".</p>
                </div>
            }
        </div>
    </div>
</div>
