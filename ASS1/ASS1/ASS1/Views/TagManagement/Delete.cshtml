@model TagDetailsViewModel

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-danger">Delete Tag</h4>
                </div>
                <div class="card-body">
                    @if (!Model.CanDelete)
                    {
                        <div class="alert alert-warning">
                            <h5><i class="fas fa-exclamation-triangle"></i> Cannot Delete Tag</h5>
                            <p>This tag cannot be deleted because it is being used by @Model.ArticleCount news article(s). Please remove the tag from all articles first.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this tag?</h5>
                            <p>This action cannot be undone.</p>
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Tag ID:</dt>
                        <dd class="col-sm-9">@Model.Tag.TagId</dd>

                        <dt class="col-sm-3">Tag Name:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary fs-6">@Model.Tag.TagName</span>
                        </dd>

                        <dt class="col-sm-3">Note:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Tag.Note))
                            {
                                @Model.Tag.Note
                            }
                            else
                            {
                                <span class="text-muted">No note provided</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Articles Count:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info fs-6">@Model.ArticleCount</span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        @if (Model.CanDelete)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Tag.TagId" />
                                <button type="submit" class="btn btn-danger">Delete Tag</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
