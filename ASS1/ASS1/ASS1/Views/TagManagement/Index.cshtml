@model TagSearchViewModel

@{
    ViewData["Title"] = "Tag Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Tag Management</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Tag
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Search Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="SearchTerm" class="form-label">Search Tags</label>
                                <input asp-for="SearchTerm" class="form-control" placeholder="Search by tag name" />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-primary">Search</button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Summary -->
            <div class="mb-3">
                <p class="text-muted">Showing @Model.Tags.Count() of @Model.TotalCount tags</p>
            </div>

            <!-- Tags Table -->
            <div class="card">
                <div class="card-body">
                    @if (Model.Tags.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tag Name</th>
                                        <th>Note</th>
                                        <th>Articles Count</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <tr>
                                            <td>@tag.TagId</td>
                                            <td>
                                                <span class="badge bg-primary">@tag.TagName</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(tag.Note))
                                                {
                                                    @tag.Note
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No note</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@tag.NewsArticles.Count</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@tag.TagId" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Articles" asp-route-id="@tag.TagId" 
                                                       class="btn btn-sm btn-outline-primary" title="View Articles">
                                                        <i class="fas fa-newspaper"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@tag.TagId" 
                                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@tag.TagId" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <h5>No tags found</h5>
                            <p class="text-muted">Try adjusting your search criteria or create a new tag.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
