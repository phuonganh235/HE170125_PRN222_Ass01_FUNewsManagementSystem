@model BusinessObjects.Category
@{
    ViewBag.Title = "Chi tiết danh mục";
}

<h2 class="text-center">Thông tin chi tiết danh mục</h2>

<div class="card mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Mã danh mục</dt>
            <dd class="col-sm-8">@Model.CategoryID</dd>

            <dt class="col-sm-4">Tên danh mục</dt>
            <dd class="col-sm-8">@Model.CategoryName</dd>

            <dt class="col-sm-4">Mô tả</dt>
            <dd class="col-sm-8">@Model.CategoryDesciption</dd>

            <dt class="col-sm-4">Kích hoạt</dt>
            <dd class="col-sm-8">
                @(Model.IsActive == true ? "Đang hoạt động" : "Bị ẩn")
            </dd>

            <dt class="col-sm-4">Danh mục cha</dt>
            <dd class="col-sm-8">
                @(Model.ParentCategoryID.HasValue ? Model.ParentCategoryID.ToString() : "Không")
            </dd>
        </dl>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
