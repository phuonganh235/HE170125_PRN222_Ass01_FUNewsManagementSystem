@model BusinessObjects.SystemAccount
@{
    ViewBag.Title = "Chi tiết tài khoản";
}

<h2 class="text-center">Thông tin chi tiết tài khoản</h2>

<div class="card mt-4 mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-5">Mã tài khoản</dt>
            <dd class="col-sm-7">@Model.AccountID</dd>

            <dt class="col-sm-5">Tên tài khoản</dt>
            <dd class="col-sm-7">@Model.AccountName</dd>

            <dt class="col-sm-5">Email</dt>
            <dd class="col-sm-7">@Model.AccountEmail</dd>

            <dt class="col-sm-5">Vai trò</dt>
            <dd class="col-sm-7">
                @{
                    string roleName = Model.AccountRole == 0 ? "Quản trị"
                    : Model.AccountRole == 1 ? "Nhân viên"
                    : "Giảng viên";
                    @roleName
                }
            </dd>

            <dt class="col-sm-5">Mật khẩu</dt>
            <dd class="col-sm-7">********</dd>
        </dl>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
