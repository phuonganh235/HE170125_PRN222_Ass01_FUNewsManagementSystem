@model IEnumerable<BusinessObjects.SystemAccount>
@{
    ViewBag.Title = "Quản lý Tài khoản";
}
<h2 class="text-center">Danh sách Tài khoản</h2>

<!-- Thông báo thành công hoặc lỗi -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["Error"]
    </div>
}

<div class="text-end mb-2">
    <!-- Nút Thêm tài khoản mở popup -->
    <button id="btnCreate" class="btn btn-success" data-url="@Url.Action("Create", "Account")">
        Thêm tài khoản mới
    </button>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:5%">#</th>
            <th>Tên tài khoản</th>
            <th>Email</th>
            <th>Quyền</th>
            <th style="width:20%">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var acc in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@acc.AccountName</td>
                    <td>@acc.AccountEmail</td>
                    <td>
                        @(acc.AccountRole != null
                            ? (acc.AccountRole.Equals("Admin") ? "Quản trị" : "Nhân viên")
                            : "")
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-controller="Account" asp-route-id="@acc.AccountId"
                           class="btn btn-info btn-sm">Chi tiết</a>
                        <button class="btn btn-primary btn-sm btn-edit"
                                data-url="@Url.Action("Edit", "Account", new { id = acc.AccountId })">
                            Sửa
                        </button>
                        <button class="btn btn-danger btn-sm btn-delete"
                                data-url="@Url.Action("Delete", "Account", new { id = acc.AccountId })">
                            Xóa
                        </button>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không có tài khoản nào.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Popup for Create/Edit -->
<div class="modal fade" id="modalAccount" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Thông tin Tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung form sẽ được load ở đây -->
            </div>
        </div>
    </div>
</div>

<!-- Modal Popup for Delete Confirmation -->
<div class="modal fade" id="modalConfirm" tabindex="-1" aria-labelledby="confirmTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <!-- Nội dung xác nhận sẽ được load ở đây -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Mở form tạo tài khoản
            $('#btnCreate').click(function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                $('#modalTitle').text('Thêm tài khoản mới');
                $('#modalAccount .modal-body').load(url, function () {
                    $('#modalAccount').modal('show');
                });
            });

            // Mở form chỉnh sửa tài khoản
            $('.btn-edit').click(function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                $('#modalTitle').text('Chỉnh sửa Tài khoản');
                $('#modalAccount .modal-body').load(url, function () {
                    $('#modalAccount').modal('show');
                });
            });

            // Mở popup xác nhận xóa
            $('.btn-delete').click(function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                $('#modalConfirm .modal-body').load(url, function () {
                    $('#modalConfirm').modal('show');
                });
            });
        });
    </script>
}
