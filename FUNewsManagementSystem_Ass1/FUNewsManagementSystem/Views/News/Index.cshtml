@model IEnumerable<BusinessObjects.NewsArticle>
@{
    ViewBag.Title = "Quản lý bài viết";
}

<h2 class="text-center">Danh sách Bài viết của bạn</h2>

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex">
            <input type="text" name="keyword" class="form-control me-2" placeholder="Tìm theo tiêu đề, nội dung..." value="@ViewBag.Keyword" />
            <select name="categoryId" class="form-select me-2">
                <option value="">-- Tất cả danh mục --</option>
                @foreach (var cat in ViewBag.Categories)
                {
                    <option value="@cat.CategoryID" @(cat.CategoryID == ViewBag.CategoryId ? "selected" : "")>
                        @cat.CategoryName
                    </option>
                }
            </select>
            <select name="status" class="form-select me-2">
                <option value="">-- Trạng thái --</option>
                <option value="1" @(ViewBag.Status == 1 ? "selected" : "")>Hoạt động</option>
                <option value="0" @(ViewBag.Status == 0 ? "selected" : "")>Ẩn</option>
            </select>
            <button type="submit" class="btn btn-primary">Lọc</button>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-success" id="btnCreate" data-url="@Url.Action("Create", "News")">
            Thêm bài viết mới
        </button>
    </div>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:5%">#</th>
            <th>Tiêu đề</th>
            <th>Danh mục</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th style="width:25%">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@item.NewsTitle</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        @(item.NewsStatus == true ? "Hoạt động" : "Ẩn")
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.NewsArticleID" class="btn btn-info btn-sm">Chi tiết</a>
                        <button class="btn btn-primary btn-sm btn-edit" data-url="@Url.Action("Edit", "News", new { id = item.NewsArticleID })">Sửa</button>
                        <button class="btn btn-danger btn-sm btn-delete" data-url="@Url.Action("Delete", "News", new { id = item.NewsArticleID })">Xóa</button>
                        <a asp-action="Duplicate" asp-route-id="@item.NewsArticleID" class="btn btn-secondary btn-sm">Nhân bản</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Không có bài viết nào.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal cho Create/Edit -->
<div class="modal fade" id="modalNews" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title">Form Bài viết</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <!-- nội dung form -->
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="modalConfirm" tabindex="-1" aria-labelledby="confirmTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <!-- nội dung xác nhận -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnCreate').click(function () {
                let url = $(this).data('url');
                $('#modalTitle').text('Thêm bài viết');
                $('#modalNews .modal-body').load(url, function () {
                    $('#modalNews').modal('show');
                });
            });

            $('.btn-edit').click(function () {
                let url = $(this).data('url');
                $('#modalTitle').text('Chỉnh sửa bài viết');
                $('#modalNews .modal-body').load(url, function () {
                    $('#modalNews').modal('show');
                });
            });

            $('.btn-delete').click(function () {
                let url = $(this).data('url');
                $('#modalConfirm .modal-body').load(url, function () {
                    $('#modalConfirm').modal('show');
                });
            });
        });
    </script>
}
