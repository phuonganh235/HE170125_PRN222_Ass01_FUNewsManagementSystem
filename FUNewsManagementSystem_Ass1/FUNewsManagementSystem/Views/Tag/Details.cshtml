@model BusinessObjects.Tag
@{
    ViewBag.Title = "Chi tiết thẻ";
    var articles = ViewBag.UsedInArticles as List<BusinessObjects.NewsArticle>;
}

<h2 class="text-center">Chi tiết Thẻ</h2>

<div class="card mt-3 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Mã thẻ</dt>
            <dd class="col-sm-8">@Model.TagID</dd>

            <dt class="col-sm-4">Tên thẻ</dt>
            <dd class="col-sm-8">@Model.TagName</dd>

            <dt class="col-sm-4">Ghi chú</dt>
            <dd class="col-sm-8">@Model.Note</dd>
        </dl>
    </div>
</div>

@if (articles != null && articles.Any())
{
    <h4 class="mt-4">Bài viết sử dụng thẻ này</h4>
    <ul class="list-group">
        @foreach (var news in articles)
        {
            <li class="list-group-item">
                <strong>@news.NewsTitle</strong> – @news.CreatedDate?.ToString("dd/MM/yyyy")
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted mt-3">Thẻ này chưa được sử dụng trong bài viết nào.</p>
}

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
