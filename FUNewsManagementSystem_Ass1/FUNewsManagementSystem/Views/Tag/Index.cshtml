@model IEnumerable<BusinessObjects.Tag>
@{
    ViewBag.Title = "Quản lý Thẻ";
}

<h2 class="text-center">Danh sách Thẻ</h2>

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex">
            <input type="text" name="keyword" class="form-control me-2" placeholder="Tìm theo tên thẻ..." value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-success" id="btnCreate" data-url="@Url.Action("Create", "Tag")">
            Thêm thẻ mới
        </button>
    </div>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:5%">#</th>
            <th>Tên thẻ</th>
            <th>Ghi chú</th>
            <th style="width:20%">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            var index = 1;
            foreach (var tag in Model)
            {
                <tr>
                    <td class="text-center">@index</td>
                    <td>@tag.TagName</td>
                    <td>@tag.Note</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@tag.TagID" class="btn btn-info btn-sm">Chi tiết</a>
                        <button class="btn btn-primary btn-sm btn-edit" data-url="@Url.Action("Edit", "Tag", new { id = tag.TagID })">Sửa</button>
                        <button class="btn btn-danger btn-sm btn-delete" data-url="@Url.Action("Delete", "Tag", new { id = tag.TagID })">Xóa</button>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Không có thẻ nào.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal tạo/sửa -->
<div class="modal fade" id="modalTag" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title">Form Thẻ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="modalConfirm" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnCreate').click(function () {
                const url = $(this).data('url');
                $('#modalTitle').text('Thêm thẻ');
                $('#modalTag .modal-body').load(url, function () {
                    $('#modalTag').modal('show');
                });
            });

            $('.btn-edit').click(function () {
                const url = $(this).data('url');
                $('#modalTitle').text('Chỉnh sửa thẻ');
                $('#modalTag .modal-body').load(url, function () {
                    $('#modalTag').modal('show');
                });
            });

            $('.btn-delete').click(function () {
                const url = $(this).data('url');
                $('#modalConfirm .modal-body').load(url, function () {
                    $('#modalConfirm').modal('show');
                });
            });
        });
    </script>
}
